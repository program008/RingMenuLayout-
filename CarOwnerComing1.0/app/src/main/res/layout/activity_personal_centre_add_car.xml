<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/white">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="请输入车辆信息"
    android:padding="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/personal_centre_add_car_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车主姓名"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/personal_centre_add_car_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:layout_toRightOf="@id/personal_centre_add_car_name_tv"
            android:background="@drawable/shape_take_picture_duty_baoan_car_edit_bg"
            />
        <TextView
            android:id="@+id/personal_centre_add_car_plate_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_centre_add_car_name_tv"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/personal_centre_add_car_plate_number_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/personal_centre_add_car_plate_number_tv"
            android:background="@drawable/shape_take_picture_duty_baoan_car_edit_bg"
            android:layout_below="@id/personal_centre_add_car_name_tv"
            android:layout_alignLeft="@id/personal_centre_add_car_name_edit"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/addcar2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_take_picture_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="继续添加"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</LinearLayout>